
<div class="header-search-wrapper grey hide-on-large-only">
    <i class="mdi-action-search active"></i>
    <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
</div>

<div class="container">
    <div class="row">
        <div class="col s12 m12 l12">
            <h5 class="breadcrumbs-title">Criterio de Búsqueda : @ViewBag.id</h5>
            <ol class="breadcrumbs">
                <li class="active">99 productos encontrados</li>
            </ol>
        </div>
    </div>
</div>

<div class="row" ng-controller="ctrl">
    <div class="col s6 m4 l2" ng-repeat="a in productos">
        <div class="product-card">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <a class="btn-floating btn-large btn-price waves-effect waves-light  pink accent-2">S/{{a.Precio}}</a>
                    <a href="/Detalle/Index/{{a.ArticuloId}}"><img src="~/images/img2.jpg" alt="product-img"></a>
                </div>
                <ul class="card-action-buttons">
                    <li>
                        <a class="btn-floating waves-effect waves-light light-blue"><i class="mdi-action-info activator"></i></a>
                    </li>
                </ul>
                <div class="card-content">
                    <div class="row">
                        <div class="col s12">
                            <p class="card-title grey-text text-darken-4">
                                <a href="#" class="grey-text text-darken-4" ng-click="servicio.agregarCarrito(a)">{{a.Denominacion}}</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4"><i class="mdi-navigation-close right"></i> Apple MacBook Pro A1278 13"</span>
                    <p>Here is some more information about this product that is only revealed once clicked on.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        myapp.controller("ctrl", function ($scope, $http, servicio) {
            $scope.servicio = servicio;
            $scope.productos = [];
           


        });
    </script>
}