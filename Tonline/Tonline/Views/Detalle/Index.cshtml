
<div>
    <p></p>
    <div class="row" ng-controller="ctrl">
        <div class="col s12 m12 l4" style="border:1px solid red">
            <img id="imgProducto" class="materialboxed" width="350" src="~/images/gallary/Lenovo.jpg" alt="sample" data-caption="LENOVO Y70-70">
            <p></p><br />
            <div class="row">
                <div class="col s12 m12 l4" style="border:1px solid red">
                    <img class="waves-effect" width="100" src="~/images/gallary/tapa.jpg" alt="sample" data-caption="LENOVO Y70-70">
                    <p></p><br />
                </div>
                <div class="col s12 m12 l4" style="border:1px solid red">
                    <img class="waves-effect" width="100" src="~/images/gallary/mouse.jpg" alt="sample" data-caption="LENOVO Y70-70">
                    <p></p><br />
                </div>
                <div class="col s12 m12 l4" style="border:1px solid red">
                    <img class="waves-effect" width="100" src="~/images/gallary/teclado.jpg" alt="sample" data-caption="LENOVO Y70-70">
                    <p></p><br />
                </div>
            </div>

        </div>


        <div class="col s12 m12 l8" style="border:1px solid red">
            <div class="row">
                <div class="col s12 m12 l12" style="border:1px solid red">{{producto.Denominacion}}</div>
            </div>
            <div class="row">
                <div class="col s12 m6 l6" style="border:1px solid red">
                    <font color="green">10 DISPONIBLES</font><p>
                        {{producto.Descripcion}}</p>
                </div>
                <div class="col s12 m6 l6" style="border:1px solid red">
                    <s>S/. 4,999.00</s>    -20%<p><font color="red">S/. {{producto.Precio}}</font><p>Ahorra S/. 1,000.00<p>
                    <p><a class="btn btn-large waves-effect waves-light yellow darken-4" ng-click="servicio.agregarCarrito({ArticuloId:producto.ArticuloId,Denominacion:producto.Denominacion,Precio:producto.Precio,Cantidad:1})">COMPRAR AHORA</a><p>
                    <font color="navy">Entrega en 7 días hábiles</font>
                    <p>Compra vía Telefono:   (066) 31 8687</p>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts
{
    <script>
        myapp.controller("ctrl", function ($scope, $http, servicio) {
            $scope.servicio = servicio;
            $scope.producto = {};
            
            $http.get('@Url.Action("ObtenerArticulo", "Detalle")',{ params: { pArticuloId: @ViewBag.ArticuloId } })
                  .success(function (d) {$scope.producto = d;}).error(function () { });

            
        
        });

        $(function () {
            $(".enlacecarrito").click(function () {
                $(".mostrarcarrito").trigger("click");
            });

        });

        
    </script>
}